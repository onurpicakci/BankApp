@using Domain.Entity
@model Customer

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-6">
        <h3 class="mb-4">Müşteri Oluştur</h3>
    </div>
</div>

<form asp-controller="Customer" asp-action="Index" method="post" role="form">
    <div class="form-group">
        <div class="mb-3">
            <label for="tckn">TCKN</label>
            <input class="form-control" type="text" asp-for="TCKN" id="tckn" placeholder="TCKN"/>
            <span class="text-danger" asp-validation-for="TCKN"></span>
        </div>
        <div class="mb-3">
            <label>Name</label>
            <input class="form-control" type="text" asp-for="Name" placeholder="Name"/>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <label>Surname</label>
            <input class="form-control" type="text" asp-for="Surname" placeholder="Surname"/>
            <span class="text-danger" asp-validation-for="Surname"></span>
        </div>
        <div class="mb-3">
            <label>Address</label>
            <input class="form-control" type="text" asp-for="Address" placeholder="Address"/>
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>
        <div class="mb-3">
            <label>Birthdate</label>
            <input class="form-control" type="date" asp-for="Birthdate" placeholder="Birthdate"/>
            <span class="text-danger" asp-validation-for="Birthdate"></span>
        </div>
        <span class="text-danger" class="text-danger">@ViewBag?.Message</span>
    </div>
    <button class="mt-3 btn btn-outline-warning" type="submit">Müşteri Oluştur</button>
</form>