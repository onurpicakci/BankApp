@using Domain.Entity
@model User

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-6">
        <h3 class="mb-4">Kullanıcı Girişi</h3>
    </div>
</div>

<form asp-controller="User" asp-action="Login" method="post" role="form">

    <div class="form-group">
        <div class="mb-3">
            <label for="tckn">Username</label>
            <input class="form-control" type="text" asp-for="Username" id="tckn" placeholder="Username"/>
            <span class="text-danger" asp-validation-for="Username"></span>
        </div>
        <div class="mb-3">
            <label>Password</label>
            <div class="input-group">
                <input class="form-control" type="password" asp-for="Password" placeholder="Password"/>
                <button class="btn btn-secondary password-visibility-button" type="button">
                    <i class="fa fa-eye-slash" aria-hidden="true"></i>
                </button>
            </div>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
    </div>
    <button class="mt-3 btn btn-outline-warning" type="submit">Giriş Yap</button>
</form>