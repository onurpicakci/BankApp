@model Domain.Entity.User

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="row">
    <div class="col-lg-6">
        <h3 class="mb-4">Kullanıcı Oluştur</h3>
    </div>
</div>

<form asp-controller="User" asp-action="AddUser" method="post" role="form">
    <div class="form-group">
        <div class="mb-3">
            <label>Username</label>
            <input class="form-control" type="text" asp-for="Username" placeholder="Username"/>
            <span class="text-danger" asp-validation-for="Username"></span>
        </div>
        <div class="mb-3">
            <label>Email</label>
            <input class="form-control" type="text" asp-for="Email" placeholder="Email"/>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="mb-3">
            <label>Password</label>
            <input class="form-control" type="text" asp-for="Password" placeholder="Password"/>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="mb-3">
            <label>ConfirmPassword</label>
            <input class="form-control" type="text" asp-for="ConfirmPassword" placeholder="ConfirmPassword"/>
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="mb-3">
            <label>Role</label>
            <input class="form-control" type="text" asp-for="Role" placeholder="Role"/>
            <span class="text-danger" asp-validation-for="Role"></span>
        </div>
        <span class="text-danger" class="text-danger">@ViewBag?.Message</span>
    </div>
    <button class="mt-3 btn btn-outline-warning" type="submit">Kullanıcı Oluştur</button>
</form>
